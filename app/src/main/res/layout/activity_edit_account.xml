<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/bar_edit_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/back_edit_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/mz_titlebar_ic_back_dark"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/title_edit_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4"
        android:layout_below="@id/bar_edit_account"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4"
        android:layout_above="@id/delete_edit_account"/>

    <TextView
        android:id="@+id/delete_edit_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/delete"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:drawableTop="@drawable/ic_sb_delete"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
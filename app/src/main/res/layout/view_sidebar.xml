<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/head_sidebar"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/logo_sidebar"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_default"
            android:layout_centerHorizontal="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/address_sidebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a1721397309@outlook.com"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/logo_sidebar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/rotate_expand"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/ic_grey_expand"
            android:layout_below="@id/logo_sidebar"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/address_sidebar"
            android:layout_toRightOf="@id/address_sidebar"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@id/setting_sidebar"
        android:layout_below="@id/head_sidebar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/inbox"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_inbox"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/inbox"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/unread_box"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_unread"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/unread"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/important_contacts"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_vip"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/important_contacts"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachment_sidebar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_attachment"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/attachment"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_todo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_todo"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/todo"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/draft"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_draft"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/draft"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sent"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_sent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/sent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_recycler"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/recycler"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/star"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_star"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/star"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/folder"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_color"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sidebar_folder"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/folder"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_grey_expand"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/sidebar_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head_sidebar"
        android:layout_above="@id/setting_sidebar"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/add_sidebar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/add_account"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/mz_tab_ic_add_dark"
            android:drawableLeft="@drawable/mz_tab_ic_add_dark"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/setting_sidebar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:text="@string/setting"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_sidebar_settingpng"
        android:drawableLeft="@drawable/ic_sidebar_settingpng"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

</RelativeLayout>